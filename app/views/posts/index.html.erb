<div class="col-md-6 col-md-offset-3">
  <h1>Post#index</h1>
  <p><%= link_to "Post Create", new_post_path, class: "btn btn-primary" %></p>
  <p>postを作ってみよう</p>
  <p>以下過去Post</p>
  <div class="col-md-10 col-md-offset-1">
    <ul class="list-group">
      <% @posts.each do |post| %>
        <%= link_to post_path(post) do %>
          <li class="list-group-item">
            <span class="badge"><%= post.repost_count %></span>
            <%= post.title %>
            <div class="create-time-name">
              <%= post.user.name %> : <%= simple_time(post.created_at) %>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
