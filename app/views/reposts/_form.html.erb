<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@repost) do |f| %>

      <%= f.label :content %>
      <%= f.text_field :content, class: 'form-control' %>

      <%= f.hidden_field :post_id, value: @post.id %>
      <%= f.submit "Reply", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
