<div class="row">
  <div class="comments-form">
    <%= form_for(@message) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form_control' %>
    <%= f.submit "送信", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
